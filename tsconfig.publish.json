{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "lib",
    "removeComments": false,
    "target": "es2018",
    "sourceMap": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "DOM",
      "ES2019",
      "ESNext"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
}