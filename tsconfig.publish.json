{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "lib",
    "removeComments": true,
    "target": "es2018",
    "sourceMap": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["ES2018"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["src/bin/sdm-watch.ts"]
}
